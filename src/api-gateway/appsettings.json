{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "gameApiRoute": {
        "ClusterId": "gamesApi",
        "Match": {
          "Path": "/api/games/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "userRoute": {
        "ClusterId": "gamesApi",
        "Match": {
          "Path": "/api/user/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "platformsRoute": {
        "ClusterId": "gamesApi",
        "Match": {
          "Path": "/api/platforms/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "statsRoute": {
        "ClusterId": "gamesApi",
        "Match": {
          "Path": "/api/stats"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "igdbRoute": {
        "ClusterId": "igdbApi",
        "Match": {
          "Path": "/api/igdb/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/igdb"
          }
        ]
      },
      "igdbGamesRoute": {
        "ClusterId": "igdbApi",
        "Match": {
          "Path": "/api/igdb/games/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/igdb"
          }
        ]
      }
    },
    "Clusters": {
      "gamesApi": {
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionOrLower"
        },
        "Destinations": {
          "destination1": {
            "Address": "http://games-api",
            "Health": "http://games-api/health"
          }
        }
      },
      "igdbApi": {
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionOrLower"
        },
        "Destinations": {
          "destination2": {
            "Address": "http://igdb-api",
            "Health": "http://igdb-api/health"
          }
        }
      }
    }
  }
}
